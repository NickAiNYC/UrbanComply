# UrbanComply Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# NYC Department of Buildings API
# ============================================
DOB_API_KEY=your_dob_api_key_here
DOB_API_URL=https://data.cityofnewyork.us/resource/
DOB_BIS_URL=https://a810-bisweb.nyc.gov/bisweb/

# ============================================
# ENERGY STAR Portfolio Manager
# ============================================
ESPM_USERNAME=your_espm_username
ESPM_PASSWORD=your_espm_password
ESPM_API_URL=https://portfoliomanager.energystar.gov/ws/

# ============================================
# CRM Integration (Google Sheets)
# ============================================
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
CRM_SHEET_ID=your_google_sheet_id
CRM_SHEET_NAME=UrbanComply_CRM

# ============================================
# Calendly Integration
# ============================================
CALENDLY_API_KEY=your_calendly_api_key
CALENDLY_USER_URL=https://calendly.com/your-username

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@urbancomply.com
FROM_NAME=UrbanComply

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/urbancomply
# Or for SQLite in development:
# DATABASE_URL=sqlite:///urbancomply.db

# ============================================
# Application Configuration
# ============================================
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here_change_in_production

# ============================================
# Monitoring and Error Tracking
# ============================================
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# LLM API Keys (for Scale Scout agent)
# ============================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# Redis (for caching and task queue)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Agent Configuration
# ============================================
AGENT_COMMUNICATION_MODE=async
AGENT_LOG_DIR=./logs/agents
VALIDATION_REPORT_DIR=./reports
